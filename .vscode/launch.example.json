{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/HLDS/hlds.exe",
            "args": [
                "-dev",
                "-console",
                "-game", "ag",
                "-insecure",
                "+log", "on",
                "+sv_lan", "1",
                "+maxplayers", "32",
                "+map", "crossfire"
            ],
            "cwd": "C:/HLDS"
        },
        {
            "name": "Server (Linux, LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${env:HOME}/hlds/hlds_linux",
            "args": [
                "-dev",
                "-console",
                "-game", "ag",
                "-insecure",
                "+localinfo", "mm_gamedll", "dlls/ag.so",
                "+log", "on",
                "+sv_lan", "1",
                "+maxplayers", "32",
                "+map", "crossfire"
            ],
            "cwd": "${env:HOME}/hlds"
        },
        {
            "name": "Server (Linux, GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:HOME}/hlds/hlds_linux",
            "args": [
                "-dev",
                "-console",
                "-game", "valve",
                "-insecure",
                "+localinfo", "mm_gamedll", "dlls/hl.so",
                "+log", "on",
                "+sv_lan", "1",
                "+maxplayers", "32",
                "+map", "crossfire",
            ],
            "cwd": "${env:HOME}/hlds"
        },
        {
            "name": "lldb: Attach",
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickProcess}"
        },
    ]
}
